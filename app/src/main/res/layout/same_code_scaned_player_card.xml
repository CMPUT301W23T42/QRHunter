<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/same_qr_frame"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/frame_null" />

            <ImageView
                android:id="@+id/same_qr_square"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/square_null" />

            <ImageView
                android:id="@+id/same_qr_rest"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rest_null" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/same_QR_code_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:fontFamily="@font/rajdhani_semibold"/>

            <TextView
                android:id="@+id/same_QR_code_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:fontFamily="@font/rajdhani_semibold"/>

            <TextView
                android:id="@+id/same_QR_code_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/rajdhani_semibold"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>